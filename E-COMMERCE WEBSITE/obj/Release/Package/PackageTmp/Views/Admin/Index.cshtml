@model E_COMMERCE_WEBSITE.Models.AdminModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <title>Index</title>
</head>
<body>
    <section id="form">
        <!--form-->
        <div class="container">
            <div class="row">
                <canter>
                    <div class="col-sm-4 col-sm-offset-1">
                        <div class="login-form">
                            <!--login form-->
                            <h2>Admin Login</h2>
                            <form asp-action="Index" asp-controller="Admin" method="post">
                                <small class="text-center text-danger">@ViewBag.Error</small>
                                <div class=" form-group">
                                    <input type="text" name="Username" value="" placeholder="Enter username" class="form-control" />
                                </div>
                                <div class=" form-group">
                                    <input type="Password" name="Password" value="" placeholder="Enter Password" class="form-control" />
                                </div>
                                <span>
                                    <input type="checkbox" class="checkbox">
                                    Keep me signed in
                                </span>                               
                                <div class="form-group">
                                    <input type="submit" name="submit" value="submit" class="btn btn-primary" />
                                    
                                </div>
                            </form>
                        </div><!--/login form-->
                    </div>
                </canter>
            </div>
        </div>
    </section>  
     
    <script src="~/js/bootstrap.min.js"></script>

</body>
</html>
