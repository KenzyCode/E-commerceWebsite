@model E_COMMERCE_WEBSITE.Models.UserTable
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Homelayout.cshtml";
}
<section id="form">
    <!--form-->
    <div class="container">
        <div class="row col-md-6 col-md-offset-3">
          
                <form asp-action="Login" asp-controller="Home" method="post">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="login-form">
                            <!--login form-->
                            <h2>Login to your account</h2>
                            <small class="text-danger text-center">@ViewBag.Error</small>
                            <input type="email" placeholder="Email" name="Email" required /> <br /> <br />
                            <input type="password" placeholder="Password" name="Password" required /> <br />
                            @if (Model.ProductId != null)
                            {
                                // this will store the details of the product being added to cart
                                <input type="hidden" name="ProductId" value="@Model.ProductId" />
                            }
                            <span>
                                <input type="checkbox" class="checkbox">
                                Keep me signed in
                            </span>
                            <button type="submit" class="btn btn-primary">Login</button>
                            <p>No Account?<a href="~/Home/Signup">SignUp</a></p>

</div><!--/login form-->
                    </div>
                </form>
            

        </div>
    </div>
</section><!--/form-->
